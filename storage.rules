rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read public content
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow users to upload voice messages in their sessions
    match /chat_sessions/{sessionId}/voice/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow users to upload journal attachments
    match /journals/{userId}/{journalId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}